---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Consultant and Developer â€“ Reliable by Design">
  <div class="grid">
    <div class="container">
      <h1 class="header">VISUA1HUE</h1>
      <p class="subheader">
        Built to perform. Designed to scale. <br />Focused on what matters most.
      </p>
    </div>
  </div>
</Layout>

<style>
  .grid {
    display: grid;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    min-height: 100vh;
    align-items: center;
    justify-items: center;
    background-color: var(--color-bg-body);
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      padding: var(--spacing-md);
    }
  }

  @media (min-width: 769px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
      padding: var(--spacing-xl);
    }
  }

  .container {
    grid-column: 1 / -1;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .header {
    font-size: 5rem;
    text-align: center;
    line-height: 1;
    margin: 0;
    color: var(--color-text-brand);
  }

  .subheader {
    font-size: var(--font-size-xl);
    text-align: center;
    margin-top: var(--spacing-md);
    width: 100%;
    color: var(--color-text-default);
  }

  @media (max-width: 768px) {
    .header {
      font-size: 3rem;
    }

    .subheader {
      font-size: var(--font-size-md);
    }
  }
</style>

<script>
  import { animate } from "motion";

  // Flag to prevent duplicate animations
  let hasAnimated = false;

  function runAnimations() {
    if (hasAnimated) return;
    hasAnimated = true;

    animate(
      ".header",
      {
        opacity: [0, 1],
        filter: ["blur(20px) hue-rotate(90deg)", "blur(0px) hue-rotate(0deg)"],
        scale: [1.1, 1],
      },
      { duration: 1.3, ease: [0.19, 1, 0.22, 1] }
    );

    animate(
      ".subheader",
      { opacity: [0, 1], y: [-20, 0] },
      { duration: 0.9, delay: 0.3, ease: [0.22, 1, 0.36, 1] }
    );
  }

  // Primary: Wait for fonts to load
  if (document.fonts && document.fonts.ready) {
    document.fonts.ready.then(runAnimations);
  } else {
    // Fallback: Run immediately if Font Loading API not supported
    runAnimations();
  }

  // Safety net: Ensure animations run even if fonts.ready doesn't fire
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      setTimeout(() => {
        if (!hasAnimated) runAnimations();
      }, 100);
    });
  } else {
    // DOM already loaded
    setTimeout(() => {
      if (!hasAnimated) runAnimations();
    }, 100);
  }
</script>
